{
    "name": "nuvoleweb/drupal-behat",
    "type": "behat-extension",
    "description": "Drupal Behat extension.",
    "keywords": [
        "drupal",
        "web",
        "test",
        "behat"
    ],
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Nuvole Web",
            "email": "info@nuvole.org"
        }
    ],
    "require": {
        "drupal/drupal-extension": "^3.4 || ^4.0"
    },
    "require-dev": {
        "composer/installers": "^1.2",
        "drupal/chosen": "~2",
        "drupal/coffee": "~1",
        "drupal/core-composer-scaffold": "^8.8 || ~9",
        "drupal/core-dev": "^8.8 || ~9",
        "drupal/paragraphs": "~1",
        "drush/drush": "~10.0",
        "ergebnis/composer-normalize": "^2.5",
        "harvesthq/chosen": "1.8.7",
        "openeuropa/task-runner": "^1.0.0-beta6",
        "phpro/grumphp": "~0.14"
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "build/"
            }
        },
        "installer-paths": {
            "build/core": [
                "type:drupal-core"
            ],
            "build/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "build/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "build/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "build/libraries/{$name}": [
                "type:drupal-library"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "NuvoleWeb\\Drupal\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NuvoleWeb\\Drupal\\Tests\\": "./tests/src/"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "package",
            "package": {
                "name": "harvesthq/chosen",
                "type": "drupal-library",
                "version": "1.8.7",
                "dist": {
                    "type": "zip",
                    "url": "https://github.com/harvesthq/chosen/releases/download/v1.8.7/chosen_v1.8.7.zip"
                }
            }
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-update-cmd": [
            "composer normalize --no-update-lock"
        ]
    }
}
